{
  // General - see also /.editorconfig
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    // Don't want to use isort because it conflicts with Ruff - see run on save below
    "source.organizeImports": false,
    "source.fixAll": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    ".mypy_cache": true,
    ".pytest_cache": true,
    ".ruff_cache": true,
    "**/__pycache__": true,
    ".idea": true
  },

  // Python
  "platformSettings.autoLoad": true,
  "platformSettings.platforms": {
    "default": {
      "nodes": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python"
      }
    },
    "win32": {
      "nodes": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe"
      }
    }
  },
  "python.analysis.extraPaths": ["${workspaceFolder}/src"],
  "[python]": {
    // https://dev.to/eegli/quick-guide-to-python-formatting-in-vs-code-2040
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "python.analysis.typeCheckingMode": "basic",
  "ruff.lint.run": "onSave",
  "ruff.lint.args": ["--config=pyproject.toml"], // not sure yet
  "ruff.importStrategy": "fromEnvironment", // needed
  "ruff.fixAll": true, //lint and fix all files in workspace   // not needed
  "ruff.organizeImports": false, //organize imports on save   // not needed

  "mypy.configFile": "pyproject.toml",
  // set to empty array to use config from project
  "mypy.targets": [],
  "mypy.runUsingActiveInterpreter": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "emeraldwalk.runonsave": {
    "commands": [
      // Run Ruff formatter on save of Python file
      // {
      //   "match": "\\.py$",
      //   "cmd": "${workspaceFolder}/.venv/bin/ruff format ${file}"
      // },
      // Run Ruff linter on save of Python file
      {
        "match": "\\.py$",
        "cmd": "${workspaceFolder}/.venv/bin/ruff ${file} --fix" // not sure it is really needed -- see without extension
      }
    ]
  },

  // PowerShell
  "[powershell]": {
    "editor.defaultFormatter": "ms-vscode.powershell"
  },
  "powershell.codeFormatting.preset": "Stroustrup",
  "python.testing.pytestArgs": ["."]
}
